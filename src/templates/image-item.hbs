{{#each this}}
<li class="gallery__item">
    <a href="{{this.largeImageURL}}" class="gallery__link">
        <img class="gallery__image" src="{{this.webformatURL}}" data-source="{{this.largeImageURL}}"
            alt="{{this.tags}}" />

    </a>
    <div class="gallery__stats">
        <p class="gallery__stats-item">
            <i class="material-icons">thumb_up</i>
            {{this.likes}}
        </p>
        <p class="gallery__stats-item">
            <i class="material-icons">visibility</i>
            {{this.views}}
        </p>
        <p class="gallery__stats-item">
            <i class="material-icons">comment</i>
            {{this.comments}}
        </p>
        <p class="gallery__stats-item">
            <i class="material-icons">cloud_download</i>
            {{this.downloads}}
        </p>
    </div>
</li>
{{/each}}